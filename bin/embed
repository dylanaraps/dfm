s() {
  x=$l
  shift 1
  while :; do case $x-$# in
    *"$1"*) x=${x%"$1"*}$2${x##*"$1"} ;;
    *-2) break ;;
    *) shift 2
  esac done
}

while IFS= read -r l; do case $l in [!#]*)
  s "$l" \" "__EMBED_$$_QUOTE__" \\ "__EMBED_$$_SLASH__" \
    "__EMBED_$$_QUOTE__" \\\" "__EMBED_$$_SLASH__" \\\\
  echo "\"$x\\n\""
esac done < "$1"

